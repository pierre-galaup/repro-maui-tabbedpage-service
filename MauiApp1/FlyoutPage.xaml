<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:mauiApp1="clr-namespace:MauiApp1"
            x:Class="MauiApp1.FlyoutPage">
    <FlyoutPage.Flyout >
        <ContentPage BackgroundColor="Red" Title="FlyoutMenuPage">
            <Label Text="MENU HERE" />
        </ContentPage>
    </FlyoutPage.Flyout>
    <FlyoutPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <mauiApp1:TabPage />
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>
</FlyoutPage>